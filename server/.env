# Server
PORT=3001
NODE_ENV=development
TIMEZONE=America/Phoenix

# Email Configuration - Using Resend
# Set these in Render environment variables:
# - RESEND_API_KEY
# - SENDER_EMAIL
USE_RESEND=true

# Alternative: Gmail SMTP (not currently used)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password

# Alternative: SendGrid (not currently used)
# USE_SENDGRID=false
# SENDGRID_API_KEY=SG.xxx

# Report Configuration
# Set these in Render environment variables:
# - REPORT_EMAIL
# - ADMIN_EMAIL

# CORS
CORS_ORIGIN=http://localhost:5173,https://the3cmall.com,https://www.the3cmall.com,https://the3cmall.app,https://www.the3cmall.app

# Database
DB_PATH=./data/3cmall.db

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=10

# Supabase Configuration
# Set these in Render environment variables:
# - SUPABASE_URL
# - SUPABASE_SERVICE_ROLE_KEY
SUPABASE_URL=
SUPABASE_SERVICE_ROLE_KEY=

# Kroger Products API
# Set these in Render environment variables:
# - KROGER_CLIENT_ID
# - KROGER_CLIENT_SECRET



